<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.gamebox.memory.MemoryGameController"
      spacing="20" alignment="CENTER" stylesheets="@../css/memory.css"
      prefWidth="800" prefHeight="600">



    <Label fx:id="emojiLabel" styleClass="emoji" />

    <Label fx:id="scoreLabel" text="Score: 0" styleClass="info-label" />
    <Label fx:id="timerLabel" text="Time: 0" styleClass="info-label" />

    <VBox fx:id="optionContainer" alignment="CENTER" spacing="10">
        <Button fx:id="option1" minWidth="200" />
        <Button fx:id="option2" minWidth="200" />
        <Button fx:id="option3" minWidth="200" />
        <Button fx:id="option4" minWidth="200" />
    </VBox>

    <Label fx:id="resultLabel" visible="false" styleClass="result-label" />

    <HBox alignment="CENTER" spacing="15">
        <Button fx:id="nextBtn" text="Next Card" />
        <Button fx:id="backBtn" text="← Back" />
        <Button fx:id="exitBtn" text="✖ Exit to Menu" />
    </HBox>
</VBox>