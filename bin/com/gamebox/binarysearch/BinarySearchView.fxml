<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.gamebox.binarysearch.BinarySearchController"
      alignment="CENTER" spacing="15">

    <Label text="🌳 Binary Search Tree Game" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
	<Button fx:id="infoButton" text="ℹ️ How to Play" styleClass="bst-button"/>
	
    <Label fx:id="targetLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
    <Label fx:id="currentNodeLabel" style="-fx-font-size: 16px;"/>
    <Label fx:id="feedbackLabel" styleClass="bst-feedback"/>
    <Label fx:id="guessLabel" styleClass="bst-guess"/>

    <HBox spacing="20" alignment="CENTER">
        <Button fx:id="leftButton" text="⬅️ Go Left" styleClass="bst-button"/>
        <Button fx:id="rightButton" text="➡️ Go Right" styleClass="bst-button"/>
    </HBox>

    <!-- Added new navigation buttons -->
    <HBox spacing="20" alignment="CENTER">
        <Button fx:id="backButton" text="↩️ Go Back" styleClass="bst-button"/>
        <Button fx:id="resetPositionButton" text="🔄 Reset Position" styleClass="bst-button"/>
    </HBox>

    <HBox spacing="20" alignment="CENTER">
        <Button fx:id="nextButton" text="🔁 Next Round" styleClass="bst-button"/>
        <Button fx:id="exitButton" text="🏠 Exit to Menu" styleClass="bst-button"/>
    </HBox>

</VBox>